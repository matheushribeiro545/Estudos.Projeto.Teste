<div class="image-container">
    @foreach (var image in ImageRandom)
    {
    <img src="@image" alt="Imagem Aleatória" class="random-image"
         style="top: @random.Next(0, 80)%; left: @random.Next(0, 80)%; transform: rotate(@random.Next(-30, 30)deg);" />
    }
</div>
